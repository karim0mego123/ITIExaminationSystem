<body>
    <div class="main-container">
        <div class="top-nav">
            <div class="logo-section">
                <div class="logo pulse"></div>
                <span class="portal-title">Student Portal</span>
            </div>
            <div class="user-section">
                <div class="user-info">
                    <div class="user-name typing-effect glow-effect">@Model.Student_Name</div>
                    <div class="user-role">Student ID: @Model.Student_Id</div>
                </div>
                <a class="logout-btn" asp-action="LoginPage" asp-controller="Home">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
        <div class="bg-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
        </div>
        <div id="dashboard" class="dashboard-container">
            <div class="student-info-card">
                <div class="student-info-grid">
                    <div class="info-item">
                        <div class="info-label"><i class="fas fa-user"></i> Student Name</div>
                        <div class="info-value">@Model.Student_Name</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label"><i class="fas fa-graduation-cap"></i> Track</div>
                        <div class="info-value">@ViewBag.Track</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label"><i class="fas fa-building"></i> Branch</div>
                        <div class="info-value">@ViewBag.Branch</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label"><i class="fas fa-calendar-alt"></i> Academic Year</div>
                        <div class="info-value">2024/2025</div>
                    </div>
                </div>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon courses"><i class="fas fa-book"></i></div>
                    <div class="stat-content">
                        <div class="stat-label">Enrolled Courses</div>
                        <div class="stat-value">@ViewBag.TrackCourses</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon exams"><i class="fas fa-file-alt"></i></div>
                    <div class="stat-content">
                        <div class="stat-label">Total Exams</div>
                        <div class="stat-value">@ViewBag.TotalExams</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon completed"><i class="fas fa-check-circle"></i></div>
                    <div class="stat-content">
                        <div class="stat-label">Completed</div>
                        <div class="stat-value">@ViewBag.CompletedExams</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon content"><i class="fas fa-graduation-cap"></i></div>
                    <div class="stat-content">
                        <div class="stat-label">Intake</div>
                        <div class="stat-value">@ViewBag.IntakeNumber</div>
                    </div>
                </div>
            </div>

            <h2 class="section-title">My Courses</h2>

            <div class="search-container">
                <div class="search-box">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" id="courseSearch" class="search-input"
                           placeholder="Search courses by name, code, or instructor..." />
                </div>
                <div class="search-results" id="searchResults">
                    Showing all @(ViewBag.Courses?.Count ?? 0) courses
                </div>
            </div>

            <!-- Carousel Navigation -->
            <div class="carousel-navigation">
                <button class="carousel-btn-circle" id="prevCourseBtn" onclick="moveCoursesCarousel(-1)">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                         stroke="#667eea" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="15 18 9 12 15 6"></polyline>
                    </svg>
                </button>

                <div class="carousel-info">
                    <span class="carousel-indicator">
                        Page <span id="currentCoursePage">1</span> of <span id="totalCoursePages">1</span>
                    </span>
                </div>

                <button class="carousel-btn-circle" id="nextCourseBtn" onclick="moveCoursesCarousel(1)">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                         stroke="#667eea" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="9 18 15 12 9 6"></polyline>
                    </svg>
                </button>
            </div>

            <!-- Courses Carousel Container -->
            <div class="courses-carousel-container">
                <div class="courses-carousel-wrapper">
                    <div class="courses-grid" id="coursesGrid">
                        @if (ViewBag.Courses != null && ViewBag.Courses.Count > 0)
                        {
                            foreach (var course in ViewBag.Courses)
                            {
                                var badgeColor = "linear-gradient(135deg, var(--primary), var(--accent))";
                                if (course.Status == "COMPLETED") { badgeColor = "linear-gradient(135deg, var(--success), #27ae60)"; }
                                else if (course.Status == "UPCOMING") { badgeColor = "linear-gradient(135deg, var(--warning), #e67e22)"; }

                                <div class="course-card"
                                     data-course-id="@course.Id"
                                     data-course-title="@course.Title.ToLower()"
                                     data-course-code="@course.Code.ToString().ToLower()"
                                     data-course-instructor="@course.Instructor.ToLower()"
                                     onclick="openCourseModal(@course.Id)">
                                    <div class="course-header">
                                        <div>
                                            <div class="course-title">@course.Title</div>
                                            <div class="course-code">@course.Code</div>
                                        </div>
                                        <div class="course-badge" style="background: @badgeColor;">@course.Status</div>
                                    </div>
                                    <div class="course-footer">
                                        <div class="course-instructor">
                                            <i class="fas fa-user-tie"></i> @course.Instructor
                                        </div>
                                        <div class="course-stats">
                                            <div class="course-stat-item">
                                                <div class="course-stat-value">@course.Modules</div>
                                                <div class="course-stat-label">Modules</div>
                                            </div>
                                            <div class="course-stat-item">
                                                <div class="course-stat-value">@course.Exams</div>
                                                <div class="course-stat-label">Exams</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="empty-state">
                                <i class="fas fa-book"></i>
                                <h3>No courses available</h3>
                                <p>You are not enrolled in any courses yet.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Carousel Dots -->
            <div class="carousel-dots" id="carouselDots"></div>
        </div>

        <div class="modal" id="courseModal">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title" id="modalTitle">Course Details</h2>
                    <button class="close-btn" onclick="closeModal()">×</button>
                </div>
                <div class="modal-body" id="modalBody"></div>
            </div>
        </div>

        <div class="fab" onclick="scrollToTop()"><i class="fas fa-arrow-up"></i></div>

    </div>
    <script>
        // ============================================================
        // GLOBAL VARIABLES
        // ============================================================
        const coursesData = {};
        const currentStudentId = @Model.Student_Id;
        const rawData = @Html.Raw(coursesJson);

        if (rawData && Array.isArray(rawData)) {
            rawData.forEach(c => {
                coursesData[c.id] = c;
            });
        }

        console.log("✅ Courses Loaded:", Object.keys(coursesData).length, "courses");
        console.log("✅ Current Student ID:", currentStudentId);

        // ============================================================
        // COURSES CAROUSEL MANAGEMENT
        // ============================================================
        let currentCoursePage = 1;
        let coursesPerPage = 6; // 2 rows × 3 columns (adjust based on your grid)
        let allCourseCards = [];
        let filteredCourseCards = [];

        function initializeCoursesCarousel() {
            allCourseCards = Array.from(document.querySelectorAll('.course-card'));
            filteredCourseCards = [...allCourseCards];

            console.log("📚 Total courses:", allCourseCards.length);

            // Calculate courses per page based on grid layout
            const gridContainer = document.getElementById('coursesGrid');
            if (gridContainer && allCourseCards.length > 0) {
                // Get computed columns to determine items per row
                const computedStyle = window.getComputedStyle(gridContainer);
                const columns = computedStyle.gridTemplateColumns.split(' ').length;
                coursesPerPage = columns * 2; // 2 rows
                console.log("📊 Courses per page (2 rows):", coursesPerPage);
            }

            renderCoursesPage(1);
        }

        function renderCoursesPage(pageNumber) {
            currentCoursePage = pageNumber;
            const totalPages = Math.ceil(filteredCourseCards.length / coursesPerPage);

            // Update page indicators
            document.getElementById('currentCoursePage').textContent = currentCoursePage;
            document.getElementById('totalCoursePages').textContent = totalPages;

            const startIndex = (currentCoursePage - 1) * coursesPerPage;
            const endIndex = Math.min(startIndex + coursesPerPage, filteredCourseCards.length);

            // Show/hide course cards
            filteredCourseCards.forEach((card, index) => {
                if (index >= startIndex && index < endIndex) {
                    card.style.display = 'flex';
                } else {
                    card.style.display = 'none';
                }
            });

            // Update navigation buttons
            const prevBtn = document.getElementById('prevCourseBtn');
            const nextBtn = document.getElementById('nextCourseBtn');

            if (prevBtn) prevBtn.disabled = currentCoursePage === 1;
            if (nextBtn) nextBtn.disabled = currentCoursePage === totalPages || totalPages === 0;

            // Update dots navigation
            renderCarouselDots(totalPages);
        }

        function moveCoursesCarousel(direction) {
            const totalPages = Math.ceil(filteredCourseCards.length / coursesPerPage);
            const newPage = currentCoursePage + direction;

            if (newPage >= 1 && newPage <= totalPages) {
                renderCoursesPage(newPage);

                // Smooth scroll to courses section
                document.getElementById('coursesGrid').scrollIntoView({
                    behavior: 'smooth',
                    block: 'nearest'
                });
            }
        }

        function goToCoursePage(pageNumber) {
            renderCoursesPage(pageNumber);
        }

        function renderCarouselDots(totalPages) {
            const dotsContainer = document.getElementById('carouselDots');
            if (!dotsContainer) return;

            dotsContainer.innerHTML = '';

            // Only show dots if there's more than 1 page
            if (totalPages <= 1) return;

            for (let i = 1; i <= totalPages; i++) {
                const dot = document.createElement('button');
                dot.className = 'carousel-dot' + (i === currentCoursePage ? ' active' : '');
                dot.type = 'button';
                dot.onclick = () => goToCoursePage(i);
                dot.setAttribute('aria-label', `Go to page ${i}`);
                dotsContainer.appendChild(dot);
            }
        }

        // ============================================================
        // COUNTDOWN TIMER MANAGEMENT
        // ============================================================
        let countdownInterval = null;

        function startCountdownTimers() {
            if (countdownInterval) {
                clearInterval(countdownInterval);
            }
            countdownInterval = setInterval(updateAllCountdowns, 1000);
            updateAllCountdowns();
        }

        function updateAllCountdowns() {
            const countdownElements = document.querySelectorAll('.countdown-timer[data-start-time]');
            const now = new Date().getTime();

            countdownElements.forEach(element => {
                const startTimeStr = element.getAttribute('data-start-time');
                const examId = element.getAttribute('data-exam-id');

                if (!startTimeStr || !examId) return;

                try {
                    const startTime = new Date(startTimeStr).getTime();
                    const distance = startTime - now;

                    if (distance < 0) {
                        const actionSection = document.getElementById(`exam-action-${examId}`);
                        if (actionSection && !actionSection.classList.contains('transformed')) {
                            actionSection.classList.add('transformed');
                            actionSection.innerHTML = `
                                <a href="/Exam/Start?examId=${examId}&studentId=${currentStudentId}"
                                   class="exam-btn"
                                   style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); animation: pulse 2s infinite;">
                                    <i class="fas fa-play-circle"></i>
                                    <span>Start Exam Now!</span>
                                </a>`;

                            const parentCard = actionSection.closest('.exam-item');
                            if (parentCard) {
                                parentCard.classList.add('card-active');
                                const statusBadge = parentCard.querySelector('.exam-status');
                                if (statusBadge) {
                                    statusBadge.className = 'exam-status status-available';
                                    statusBadge.innerHTML = `<i class="fas fa-unlock"></i> Available Now`;
                                }
                            }
                        }
                    } else {
                        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                        let timeString = '';
                        if (days > 0) {
                            timeString = `${days}d ${hours}h ${minutes}m`;
                        } else if (hours > 0) {
                            timeString = `${hours}h ${minutes}m ${seconds}s`;
                        } else if (minutes > 0) {
                            timeString = `${minutes}m ${seconds}s`;
                        } else {
                            timeString = `${seconds}s`;
                        }

                        const textSpan = element.querySelector('.countdown-text');
                        if (textSpan) {
                            textSpan.textContent = timeString;
                        }
                    }
                } catch (error) {
                    console.error('Error updating countdown for exam', examId, ':', error);
                }
            });
        }

        // ============================================================
        // SEARCH FUNCTIONALITY
        // ============================================================
        let isSearching = false;

        function setupSearch() {
            const searchInput = document.getElementById('courseSearch');

            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase().trim();

                if (searchTerm === '') {
                    // Show all courses with carousel
                    isSearching = false;
                    filteredCourseCards = [...allCourseCards];
                    showCarouselNavigation(true);
                    renderCoursesPage(1);
                    updateSearchResults(filteredCourseCards.length);
                } else {
                    // Filter and show ALL matching courses (no pagination)
                    isSearching = true;
                    filteredCourseCards = allCourseCards.filter(card => {
                        const title = card.dataset.courseTitle;
                        const code = card.dataset.courseCode;
                        const instructor = card.dataset.courseInstructor;
                        return title.includes(searchTerm) ||
                               code.includes(searchTerm) ||
                               instructor.includes(searchTerm);
                    });

                    // Hide carousel navigation when searching
                    showCarouselNavigation(false);

                    // Show all filtered results
                    displaySearchResults();
                    updateSearchResults(filteredCourseCards.length);
                }
            });

            searchInput.addEventListener('focus', function() {
                this.parentElement.style.transform = 'scale(1.02)';
            });

            searchInput.addEventListener('blur', function() {
                this.parentElement.style.transform = 'scale(1)';
            });
        }

        function displaySearchResults() {
            // Hide all cards first
            allCourseCards.forEach(card => {
                card.style.display = 'none';
            });

            // Show only filtered cards
            filteredCourseCards.forEach(card => {
                card.style.display = 'flex';
            });
        }

        function showCarouselNavigation(show) {
            const carouselNav = document.querySelector('.carousel-navigation');
            const carouselDots = document.getElementById('carouselDots');

            if (carouselNav) {
                carouselNav.style.display = show ? 'flex' : 'none';
            }
            if (carouselDots) {
                carouselDots.style.display = show ? 'flex' : 'none';
            }
        }

        function updateSearchResults(count) {
            const resultsElement = document.getElementById('searchResults');
            const totalCourses = allCourseCards.length;

            if (count === totalCourses) {
                resultsElement.textContent = `Showing all ${totalCourses} courses`;
                resultsElement.style.background = 'rgba(67, 97, 238, 0.1)';
                resultsElement.style.color = 'var(--primary)';
            } else if (count === 0) {
                resultsElement.textContent = 'No courses found. Try a different search.';
                resultsElement.style.background = 'rgba(231, 76, 60, 0.1)';
                resultsElement.style.color = 'var(--danger)';
            } else {
                resultsElement.textContent = `Found ${count} of ${totalCourses} courses`;
                resultsElement.style.background = 'rgba(52, 152, 219, 0.1)';
                resultsElement.style.color = 'var(--info)';
            }
        }

        // ============================================================
        // MODAL MANAGEMENT
        // ============================================================
        function openCourseModal(courseId) {
            const course = coursesData[courseId];
            if (!course) return;

            document.getElementById('modalTitle').textContent = `${course.title} (${course.code})`;
            const modalBody = document.getElementById('modalBody');
            modalBody.innerHTML = `
                <div class="modal-tabs">
                    <button class="tab-btn active" data-tab="content">
                        <i class="fas fa-list"></i> Course Overview
                    </button>
                    <button class="tab-btn" data-tab="examinations">
                        <i class="fas fa-file-alt"></i> Examinations
                    </button>
                </div>
                <div class="tab-content">
                    <div id="content-tab" class="tab-pane active">${generateContentHtml(course)}</div>
                    <div id="examinations-tab" class="tab-pane">${generateExamsHtml(course)}</div>
                </div>
            `;

            setupTabListeners();
            document.getElementById('courseModal').classList.add('active');
            document.body.style.overflow = 'hidden';
            setTimeout(() => startCountdownTimers(), 100);
        }

        function setupTabListeners() {
            document.querySelectorAll('.tab-btn').forEach(button => {
                button.addEventListener('click', function() {
                    switchTab(this.getAttribute('data-tab'));
                });
            });
        }

        function switchTab(tabName) {
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.toggle('active', btn.getAttribute('data-tab') === tabName);
            });
            document.querySelectorAll('.tab-pane').forEach(pane => {
                pane.classList.toggle('active', pane.id === `${tabName}-tab`);
            });
        }

        // ============================================================
        // CONTENT GENERATION
        // ============================================================
        function generateContentHtml(course) {
            let html = '<div class="content-section">';
            html += `
                <div class="summary-stats">
                    <div class="summary-stat">
                        <div class="summary-value">${course.modules || 0}</div>
                        <div class="summary-label">Modules</div>
                    </div>
                    <div class="summary-stat">
                        <div class="summary-value">${course.exams || 0}</div>
                        <div class="summary-label">Exams</div>
                    </div>
                    <div class="summary-stat">
                        <div class="summary-value">${course.completed || 0}</div>
                        <div class="summary-label">Completed</div>
                    </div>
                    <div class="summary-stat">
                        <div class="summary-value">${(course.exams || 0) - (course.completed || 0)}</div>
                        <div class="summary-label">Upcoming</div>
                    </div>
                </div>
            `;

            if (course.description && course.description.trim()) {
                html += `
                    <div style="margin: 30px 0;">
                        <h3 style="color: var(--dark); margin-bottom: 15px; font-size: 1.3rem; display: flex; align-items: center; gap: 10px;">
                            <i class="fas fa-info-circle" style="color: var(--primary);"></i> Course Description
                        </h3>
                        <div style="background: rgba(67, 97, 238, 0.05); padding: 20px; border-radius: 12px; border-left: 4px solid var(--primary);">
                            <p style="color: var(--white); line-height: 1.6;">${escapeHtml(course.description)}</p>
                        </div>
                    </div>
                `;
            }

            if (course.topics && course.topics.length > 0) {
                html += `
                    <h3 style="color: var(--dark); margin: 30px 0 20px; font-size: 1.3rem; display: flex; align-items: center; gap: 10px;">
                        <i class="fas fa-bookmark" style="color: var(--primary);"></i> Course Modules
                    </h3>
                    <div class="headlines-list">`;
                course.topics.forEach((topic, index) => {
                    html += `
                        <div class="headline-item">
                            <div class="headline-number">${index + 1}</div>
                            <div class="headline-text">${escapeHtml(topic)}</div>
                        </div>`;
                });
                html += '</div>';
            }

            html += '</div>';
            return html;
        }

        function generateExamsHtml(course) {
            if (!course.examList || course.examList.length === 0) {
                return `
                    <div style="text-align: center; padding: 60px 20px; color: var(--gray);">
                        <i class="fas fa-file-alt" style="font-size: 3rem; margin-bottom: 20px; opacity: 0.3;"></i>
                        <h3 style="margin-bottom: 10px; color: var(--dark);">No exams available</h3>
                        <p>There are no exams scheduled for this course yet.</p>
                    </div>
                `;
            }

            const completedExams = course.examList.filter(e => e.isCompleted);
            const scheduledExams = course.examList.filter(e => !e.isCompleted);

            // Sort completed exams: most recently completed first
            completedExams.sort((a, b) => {
                if (a.fullStartDate && b.fullStartDate) {
                    return new Date(b.fullStartDate) - new Date(a.fullStartDate);
                }
                return 0;
            });

            // Sort scheduled exams: newest first (most recent date at top)
            scheduledExams.sort((a, b) => {
                // If both have fullStartDate, sort by date (newest first)
                if (a.fullStartDate && b.fullStartDate) {
                    return new Date(b.fullStartDate) - new Date(a.fullStartDate);
                }
                // If only one has a date, put the one with date first
                if (a.fullStartDate) return -1;
                if (b.fullStartDate) return 1;
                // If neither has a date, maintain original order
                return 0;
            });

            let html = "";

            if (completedExams.length > 0) {
                html += '<h3 class="exam-section-title"><i class="fas fa-check-circle" style="color: #27ae60;"></i> Completed Exams</h3>';
                completedExams.forEach((exam) => {
                    const percentage = exam.totalScore ? Math.round((exam.score || 0) / exam.totalScore * 100) : 0;
                    html += `
                        <div class="exam-item">
                            <div class="exam-item-header">
                                <div>
                                    <div class="exam-name">${escapeHtml(exam.name || `Exam ${exam.id}`)}</div>
                                </div>
                                <div class="exam-type">Exam</div>
                            </div>
                            <div class="exam-details">
                                <div class="exam-detail-item"><i class="fas fa-calendar-alt"></i> ${exam.date || 'Not scheduled'}</div>
                                <div class="exam-detail-item"><i class="fas fa-stopwatch"></i> ${exam.duration || 'N/A'} minutes</div>
                                <div class="exam-detail-item"><i class="fas fa-list-ol"></i> ${exam.questionCount || 'N/A'} Questions</div>
                            </div>
                            <div class="exam-footer">
                                <span class="exam-score">
                                    <i class="fas fa-star"></i> Score: ${exam.score || 0}/${exam.totalScore || 100} (${percentage}%)
                                </span>
                            </div>
                        </div>
                    `;
                });
            }

            if (scheduledExams.length > 0) {
                if (completedExams.length > 0) html += '<div style="margin-top: 40px;"></div>';
                html += '<h3 class="exam-section-title"><i class="fas fa-calendar-check" style="color: #f39c12;"></i> Scheduled Exams</h3>';

                scheduledExams.forEach((exam) => {
                    const isExpired = exam.isExpired || false;
                    const isAvailable = exam.available || false;
                    const fullStartDate = exam.fullStartDate;

                    let cardClass = "exam-item";
                    let statusBadge = "";
                    let actionSection = "";

                    if (isExpired) {
                        cardClass += " card-expired";
                        statusBadge = `<span class="exam-status status-expired"><i class="fas fa-times-circle"></i> Expired</span>`;
                        actionSection = `<button class="exam-btn" style="background-color: #95a5a6; cursor: not-allowed;" disabled><i class="fas fa-ban"></i><span>Expired</span></button>`;
                    } else if (isAvailable) {
                        cardClass += " card-active";
                        statusBadge = `<span class="exam-status status-available"><i class="fas fa-unlock"></i> Available Now</span>`;
                        actionSection = `<a href="/Exam/Start?examId=${exam.id}&studentId=${currentStudentId}" class="exam-btn" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); animation: pulse 2s infinite;"><i class="fas fa-play-circle"></i><span>Start Exam</span></a>`;
                    } else if (fullStartDate) {
                        statusBadge = `<span class="exam-status status-upcoming"><i class="fas fa-hourglass-half"></i> Not Available Yet</span>`;
                        actionSection = `
                            <div id="exam-action-${exam.id}" style="display: flex; align-items: center; gap: 15px; flex-wrap: wrap;">
                                <div id="countdown-${exam.id}" class="countdown-timer" data-start-time="${fullStartDate}" data-exam-id="${exam.id}">
                                    <i class="fas fa-clock"></i>
                                    <span class="countdown-text">Loading...</span>
                                </div>
                                <button class="exam-btn" style="background-color: #6c757d; cursor: not-allowed;" disabled>
                                    <i class="fas fa-lock"></i><span>Coming Soon</span>
                                </button>
                            </div>`;
                    } else {
                        statusBadge = `<span class="exam-status status-upcoming"><i class="fas fa-hourglass-half"></i> Not Available Yet</span>`;
                        actionSection = `<button class="exam-btn" style="background-color: #6c757d; cursor: not-allowed;" disabled><i class="fas fa-lock"></i><span>Coming Soon</span></button>`;
                    }

                    html += `
                        <div class="${cardClass}">
                            <div class="exam-item-header">
                                <div>
                                    <div class="exam-name">${escapeHtml(exam.name || `Exam ${exam.id}`)}</div>
                                </div>
                                <div class="exam-type">Exam</div>
                            </div>
                            <div class="exam-details">
                                <div class="exam-detail-item"><i class="fas fa-calendar-alt"></i> ${exam.date || 'Not scheduled'}</div>
                                <div class="exam-detail-item"><i class="fas fa-stopwatch"></i> ${exam.duration || 'N/A'} minutes</div>
                                <div class="exam-detail-item"><i class="fas fa-list-ol"></i> ${exam.questionCount || 'N/A'} Questions</div>
                            </div>
                            <div class="exam-footer">
                                ${statusBadge}
                                ${actionSection}
                            </div>
                        </div>
                    `;
                });
            }

            return html;
        }

        function closeModal() {
            document.getElementById("courseModal").classList.remove("active");
            document.body.style.overflow = 'auto';
        }

        function scrollToTop() {
            window.scrollTo({ top: 0, behavior: "smooth" });
        }

        function escapeHtml(text) {
            if (!text) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // ============================================================
        // KEYBOARD NAVIGATION
        // ============================================================
        document.addEventListener('keydown', function(e) {
            // Only navigate if not typing in an input and modal is not open and not searching
            const modalOpen = document.getElementById('courseModal').classList.contains('active');

            if (!modalOpen &&
                !isSearching &&
                e.target.tagName !== 'INPUT' &&
                e.target.tagName !== 'TEXTAREA' &&
                e.target.tagName !== 'SELECT') {

                if (e.key === 'ArrowLeft') {
                    moveCoursesCarousel(-1);
                } else if (e.key === 'ArrowRight') {
                    moveCoursesCarousel(1);
                }
            }

            if (e.key === 'Escape') {
                closeModal();
            }
        });

        // ============================================================
        // INITIALIZATION
        // ============================================================
        document.addEventListener('DOMContentLoaded', function() {
            setupSearch();

            // Animate stat cards
            document.querySelectorAll('.stat-card').forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
            });

            // Animate course cards
            document.querySelectorAll('.course-card').forEach((card, index) => {
                card.style.animationDelay = `${index * 0.05}s`;
            });

            // Initialize carousel after a small delay to ensure grid is rendered
            setTimeout(() => {
                initializeCoursesCarousel();
            }, 100);

            startCountdownTimers();
        });

        // Handle window resize to recalculate courses per page
        window.addEventListener('resize', function() {
            const gridContainer = document.getElementById('coursesGrid');
            if (gridContainer && allCourseCards.length > 0) {
                const computedStyle = window.getComputedStyle(gridContainer);
                const columns = computedStyle.gridTemplateColumns.split(' ').length;
                const newCoursesPerPage = columns * 2;

                if (newCoursesPerPage !== coursesPerPage) {
                    coursesPerPage = newCoursesPerPage;
                    renderCoursesPage(1); // Reset to page 1 on resize
                }
            }
        });

        window.onclick = function(event) {
            if (event.target === document.getElementById('courseModal')) {
                closeModal();
            }
        };
    </script>
